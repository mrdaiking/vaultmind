# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_AUDIENCE=https://your-api-identifier

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Token Vault Configuration (Optional for MVP)
TOKEN_VAULT_ENDPOINT=https://your-token-vault-endpoint.com/exchange

# Database Configuration (Optional for MVP - uses in-memory by default)
DATABASE_URL=sqlite:///./vaultmind.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.vercel.app